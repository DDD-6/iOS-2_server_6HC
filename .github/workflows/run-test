name: Release app

on:
  workflow_dispatch:

jobs:
  run-test:
    name: run pytest
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        python-version: [3.8]

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v2
        with:
          python-version: ${{ matrix.python-version }}

      - name: Install dependencies
        run: |
          pip install poetry && poetry config virtualenvs.create false && poetry install --dev

      - name: Test with pytest
        run: |
          FLASK_ENV=testing python -m pytest -x tests/
